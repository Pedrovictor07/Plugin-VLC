//Programa de Sugestões de  músicas//


#include <string.h>
#include <math.h>
#inlcude <stdio.h>
#include <time.h>
#include <stdlib.h>

enum Tipos {				//João Neto, existe ponteiro de Enum?//
	MPB,
	CLASSIC,
	POP,
	ROCK,
	COUNTRY,
	BREGA,
	FORRO,
	FUNK,
	DANCE,
};

struct Musica {				//João Neto, como utilizar ponteiro de Struct?//
	char titulo[25];		//João Neto, como definir o tamanho do ponteiro de uma struct?//
	enum Tipos genero[20];
};

void contagem(int total, const enum Tipos **listaG, int **quant, struct Musica lista -> genero){ 
	int i,j;
	for (i = 0; i < total; ++i){
		for (j = 0; j < 9; ++j){
			if (lista[i].genero = *listaG[j]){
				quant[j]++;
				break;
			}
		}
	}
}

void estatistica (int total, const int **quant, float **resultado){		//João Neto, como vamos definir qual é o maior?//
	int i;
	for (i = 0; i < 9; ++i){
		*resultado[i] = (*quant[i] / total) * 100;
	}
	
}
